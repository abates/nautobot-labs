#!/bin/bash

DIR=`dirname $0`
. $DIR/../docker/creds.env

BIND_DN=cn=${LDAP_ADMIN_USERNAME},dc=example,dc=org
BIND_PASSWORD=${LDAP_ADMIN_PASSWORD}
SEARCH_BASE="dc=example,dc=org"

docker exec lab_ldap_ldap_1 ldapcompare \
  -H ldap://localhost:1389 \
  -D "${BIND_DN}" \
  -w "${BIND_PASSWORD}" \
  "cn=loginusers,ou=groups,dc=example,dc=org" member
